---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import SearchModal from '../../components/SearchModal.tsx';
import CartSidebar from '../../components/CartSidebar.tsx';
import { FEATURED_ITEMS } from '../../lib/constants';

export const prerender = false;

const { slug } = Astro.params;
const item = FEATURED_ITEMS.find((f) => f.url === `/featured/${slug}`);
const embedUrl = `https://www.aitmpl.com/featured/${slug}/index.html`;
---

<DashboardLayout title={item ? `${item.name} - Featured` : 'Featured'}>
  <div class="flex flex-col h-full">
    {/* Back bar */}
    <div class="px-6 py-3 border-b border-border flex items-center gap-3 shrink-0">
      <a
        href="/"
        class="inline-flex items-center gap-1.5 text-sm text-text-secondary hover:text-text-primary transition-colors"
      >
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
        </svg>
        Back
      </a>
      {item && (
        <span class="text-sm font-medium text-text-primary">{item.name}</span>
      )}
      <a
        href={embedUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="ml-auto text-xs text-text-tertiary hover:text-text-secondary transition-colors flex items-center gap-1"
      >
        Open in new tab
        <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>

    {/* Embedded content */}
    <iframe
      src={embedUrl}
      class="flex-1 w-full border-none"
      title={item?.name ?? 'Featured'}
    />
  </div>

  <SearchModal client:idle />
  <CartSidebar client:idle />
</DashboardLayout>
